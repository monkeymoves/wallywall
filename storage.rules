rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // public read on layouts/, authenticated write
    match /layouts/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // all other paths: require auth for everything
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}